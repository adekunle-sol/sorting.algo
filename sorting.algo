def insertion_sort(arr):
    for i in range(1, len(arr)):
        temp = arr[i]
        j = i - 1
        while j >= 0 and arr[j] > temp:
            arr[j + 1] = arr[j]
            j -= 1
        arr[j + 1] = temp

# Example usage:
array = [5, 2, 8, 12, 3]
insertion_sort(array)
print(array)  # Output: [2, 3, 5, 8, 12]